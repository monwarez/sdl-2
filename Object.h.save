struct ShaderUniformMatrix
{
    glm::mat4 modelview;
    glm::mat4 projection;
    GLuint    modelviewLocation;
    GLuint    projectionLocation;
    GLuint    mvpLocation;
};
class IObject
{
    public:
        IObject();
        virtual ~IObject();
        virtual void        Show(ShaderUniformMatrix uniformMatrix, Uint32 fps) =0;
};
class CubeObject : public IObject
{
    public:
        CubeObject();
        ~CubeObject();

        void                Show(ShaderUniformMatrix uniformMatrix, Uint32 fps);

    protected:
        GLuint              m_vao;
        GLuint              m_vbo;
        GLsizei             m_tailleVerticesBytes;
        GLsizei             m_tailleCoordBytes;
        Texture             m_texture;
        bool                m_useVao;

};
class   MD2Object   :   public IObject
{
    public:
        MD2Object(CEntity *entityModel); // on disposera d'un gestionnaire de ressource
        ~MD2Object();

        void                Show(ShaderUniformMatrix, Uint32 fps);
        
};
